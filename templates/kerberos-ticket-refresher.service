[Unit]
Description={{ username }} Kerberos Ticket Service
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=k5start -U -f /etc/security/keytabs/{{ username }}.keytab -k /tmp/krb5cc_{{ uid }} -l 23h -K 60 -m 600 -o {{ username }} -g {{ groupname }} -v

# Restart on any failure after 5 seconds
Restart=on-failure
RestartSec=5s
